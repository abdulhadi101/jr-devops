# Example environment file for Secure Drop
# Copy to .env and update values

APP_NAME="Secure Drop"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://secure-drop.localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - PostgreSQL for production
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=secure_drop
DB_USERNAME=secure_drop
DB_PASSWORD=secret

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Docker/Traefik Configuration
DOMAIN=secure-drop.localhost
ACME_EMAIL=admin@example.com
